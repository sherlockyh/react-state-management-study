{
  // TypeScript编译器选项
  "compilerOptions": {
    // 编译目标版本
    "target": "ES2020",
    // 包含的库文件
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // 允许编译JavaScript文件
    "allowJs": true,
    // 跳过声明文件的类型检查
    "skipLibCheck": true,
    // 启用ES模块互操作性
    "esModuleInterop": true,
    // 允许从没有默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    // 启用所有严格类型检查选项
    "strict": true,
    // 强制文件名大小写一致
    "forceConsistentCasingInFileNames": true,
    // 确保switch语句中的case不会贯穿
    "noFallthroughCasesInSwitch": true,
    // 模块系统
    "module": "ESNext",
    // 模块解析策略
    "moduleResolution": "node",
    // 允许导入JSON文件
    "resolveJsonModule": true,
    // 确保每个文件都可以安全地独立编译
    "isolatedModules": true,
    // 不输出编译文件，只进行类型检查
    "noEmit": true,
    // JSX编译选项
    "jsx": "react-jsx",
    // 基础路径
    "baseUrl": ".",
    // 路径映射配置
    "paths": {
      // 根目录src文件夹的别名
      "@/*": ["src/*"],
      // packages目录的别名
      "@packages/*": ["packages/*"],
      // examples目录的别名
      "@examples/*": ["examples/*"]
    }
  },
  // 包含的文件和目录
  "include": [
    "src/**/*",
    "packages/**/*",
    "examples/**/*",
    "website/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  // 排除的文件和目录
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
} 